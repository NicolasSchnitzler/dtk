#extension GL_EXT_gpu_shader4 : enable

// ///////////////////////////////////////////////////////////////////
// Attributes
// ///////////////////////////////////////////////////////////////////

attribute highp vec4 qt_Vertex;

// ///////////////////////////////////////////////////////////////////
// Uniforms
// ///////////////////////////////////////////////////////////////////

uniform highp mat4 qt_ModelViewProjectionMatrix;

// ///////////////////////////////////////////////////////////////////
// Vertex shader
// ///////////////////////////////////////////////////////////////////

void main()
{
    gl_Position = qt_ModelViewProjectionMatrix * qt_Vertex;
}
