<wizard version="1" kind="class" id="A.dtkAbstractDataNode" category="B.dtkComposerNodeClass">
    <description>Creates a skeleton of a composer node class wrapping a dtkAbstractData.</description>
    <description xml:lang="fr">Cr√©e le squelette d'une classe pour un noeud du composer encapsulant une dtkAbstractData.</description>
    <displayname>dtkComposer node data class</displayname>;
    <displayname xml:lang="fr">Classe dtkComposerNodeData.</displayname>;
    <displaycategory>dtk Composer Nodes</displaycategory>
    <files>
        <file source="dtkAbstractDataNode.h" target="%NodeName%.h"   openeditor="true"/>
        <file source="dtkAbstractDataNode.cpp"   target="%NodeName%.cpp" openeditor="true"/>
    </files>
    <!-- Create parameter wizard page -->
    <fieldpagetitle>dtkComposerNode Data Class</fieldpagetitle>
    <fields>
        <field name="Author">
            <fieldcontrol class="QLineEdit" validator='^[^"]+$' defaulttext="" />
            <fielddescription>Author name:</fielddescription>
        </field>
        <field name="NodeName">
            <fieldcontrol class="QLineEdit" validator="^[a-zA-Z0-9_]+$" defaulttext="" />
            <fielddescription>Node name:</fielddescription>
        </field>
        <field name="WrappedClass">
            <fieldcontrol class="QLineEdit" validator="^[a-zA-Z0-9_]+$" defaulttext="" />
            <fielddescription>Wrapped Class name:</fielddescription>
        </field>
        <field name="Layer">
            <fieldcontrol class="QLineEdit" validator="^[a-zA-Z0-9_]+$" defaulttext="" />
            <fielddescription>Layer name:</fielddescription>
        </field>
    </fields>
</wizard>

